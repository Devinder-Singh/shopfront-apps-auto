{
  "name": "takealot-ensure",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Exports NightwatchJS scripts",
  "icons": {"48": "icon-48.png",
          "128": "icon-128.png" },
  "browser_action": {
    "default_icon": "tal.png",
    "default_popup": "control.html",
    "default_title": "TAL NightwatchJS test recorder"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
     "tabs",
     "background",
     "http://*/*"
  ],
  "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["recorder.js"]
  }],
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
